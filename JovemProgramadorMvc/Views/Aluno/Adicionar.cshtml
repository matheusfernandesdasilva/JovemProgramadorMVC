@model AlunoModel
@if (TempData["Mensagem2"] != null)
{
    <div class="alert-success col-4">
        @TempData["Mensagem2"]
    </div>
}

<form asp-controller="Aluno" asp-action="Inserir" method="post">
    <div class="mb-3">
        <label for="NomeInput" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control col-6" />
    </div>
    <div class="mb-3">
        <label for="IdadeInput" class="form-label">Idade</label>
        <input type="text" asp-for="Idade" class="form-control col-1" />
    </div>
    <div class="mb-3">
        <label for="ContatoInput" class="form-label">Contato</label>
        <input type="text" asp-for="Contato" class="form-control col-3" placeholder="(00) 00000-0000" />
    </div>
    <div class="mb-3">
        <label for="EmailInput" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control col-3" />
    </div>
    <div class="mb-3">
        <label for="CEPInput" class="form-label">CEP</label>
        <input type="text" asp-for="Cep" class="form-control col-3" placeholder="00000-000" />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Index">Voltar</a>
    </div>
</form>