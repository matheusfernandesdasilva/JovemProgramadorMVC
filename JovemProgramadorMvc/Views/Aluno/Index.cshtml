@model List<AlunoModel>

@if (ViewData["Mensagem"] != null)
{
<div class="alert-danger col-4">
    @ViewData["Mensagem"]
</div>
}

@if (TempData["Mensagem2"] != null)
{
<div class="alert alert-success col-4">
    @TempData["Mensagem2"]
</div>
}

<div class="text-lefrt">

    <div>
        <h1>Dados dos Alunos</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">E-mail</th>
                <th scope="col">Cep</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
                    <tr>
                        <th scope="row">@aluno.Id</th>
                        <td>@aluno.Nome</td>
                        <td>@aluno.Idade</td>
                        <td>@aluno.Contato</td>
                        <td>@aluno.Email</td>
                        <td>@aluno.Cep</td>
                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-left">
                                <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="BuscarEndereco" asp-route-id="@aluno.Id">Endereço</a>
                            </div>
                        </td>


                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-left">
                                <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                            </div>
                        </td>

                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-left">
                                <a class="btn btn-danger" type="button" asp-controller="Aluno" asp-action="Excluir" asp-route-id="@aluno.Id">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>


    <div class="text-center">
        <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Adicionar">Adicionar Novo Aluno</a>
        <a class="btn btn-primary" type="button" asp-controller="Filtros" asp-action="Index">Filtrar</a>
    </div>

</div>
